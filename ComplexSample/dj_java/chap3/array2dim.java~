import java.util.*;
class array2dim
{
  public static void main(String args[])
  {
    int i,j,a[][],b[][],c[][];
    a=new int[2][2];
    b=new int[2][2];
    c=new int[2][2];
    Scanner s=new Scanner(System.in);
    
    System.out.println("Enter the 1st matrix");
    for(i=0;i<2;i++)
    {
      for(j=0;j<2;j++)
      {
        a[i][j]=s.nextInt();
        
      }
    }
    
    System.out.println("Enter the 2nd matrix");
    for(i=0;i<2;i++)
    {
      for(j=0;j<2;j++)
      {
        b[i][j]=s.nextInt();
      }
    }
        
    for(i=0;i<2;i++)
    {
      for(j=0;j<2;j++)
      {
        c[i][j]=a[i][j]+b[i][j];
      }
    }
        
    System.out.println("Resultant matrix");
    for(i=0;i<2;i++)
    {
      for(j=0;j<2;j++)
      {
         System.out.print(c[i][j]+"  ");
      }
      System.out.println();
    }
  }
}
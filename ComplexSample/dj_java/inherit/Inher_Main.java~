class Inher_Main
{
  public static void main(String s[])
  {
    derived d1=new derived();
    d1.show();
    s1.display();
  }
}

class base
{
  int a,b,c;
  base()
  {
    a=10;
    b=20;
  }
  void show()
  {
    c=a+b;
    System.out.println("Result for ADDITION ="+c);
  }
}

class derived extends base
{
  int d;
  derived()
  {
    d=30;
  }
  void display()
  {
    System.out.println(c+d);
  }
}
                         
    
    
  